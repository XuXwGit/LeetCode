{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/MinGW/mingw64/bin/g++.exe",
            "args": [//编译时候的参数
                "-g",//添加gdb调试选项
                "${file}",
                "-o",//指定生成可执行文件的名称
                "${workspaceFolder}\\LeetCode.exe",
                "-I", "${workspaceFolder}\\include\\",
                "-I", "${workspaceFolder}\\include\\backtrack\\",
                "-I", "${workspaceFolder}\\include\\binarysearch\\",
                "-I", "${workspaceFolder}\\include\\dynamic\\",
                "-I", "${workspaceFolder}\\include\\doublepointer\\",
                "-I", "${workspaceFolder}\\include\\greedy\\",
                "-I", "${workspaceFolder}\\include\\graph\\",
                "-I", "${workspaceFolder}\\include\\list\\",
                "-I", "${workspaceFolder}\\include\\stack\\",
                "-I", "${workspaceFolder}\\include\\sort\\",
                "-I", "${workspaceFolder}\\include\\string\\",
                "-I", "${workspaceFolder}\\include\\search\\",
                "-I", "${workspaceFolder}\\include\\math\\",
                "-I", "${workspaceFolder}\\include\\slidingwindow\\",
                "-I", "${workspaceFolder}\\include\\prefixsum\\",
                "-I", "${workspaceFolder}\\include\\tips\\",
                "-I", "${workspaceFolder}\\include\\tree\\",
                "-I", "${workspaceFolder}\\include\\others\\",
            ],
            "options": {
                "cwd": "C:/MinGW/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true//表示快捷键Ctrl+Shift+B可以运行该任务
            }
		}
	]
}